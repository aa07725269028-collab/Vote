        pageTitle = newPageTitle.trim();
        
        localStorage.setItem('systemTitle', systemTitle);
        localStorage.setItem(PAGE_TITLE_KEY, pageTitle);
        
        document.title = pageTitle;
        
        updateMainStats();
        
        showNotification("ØªÙ… ØªØ­Ø¯ÙŠØ« Ø¹Ù†ÙˆØ§Ù† Ø§Ù„Ù†Ø¸Ø§Ù… ÙˆØ´Ø±ÙŠØ· Ø§Ù„Ø¹Ù†ÙˆØ§Ù† Ø¨Ù†Ø¬Ø§Ø­.", 'success');
