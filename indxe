<script>
    // --- البيانات والمتغيرات الأساسية ---
    let candidates = JSON.parse(localStorage.getItem('electionCandidates')) || [
        { id: 1, name: "علي الموسوي", party: "التحالف الوطني", votes: 1250, imageUrl: "https://via.placeholder.com/140/00C853/FFFFFF?text=A1" },
        { id: 2, name: "فاطمة الزهراء", party: "كتلة المستقبل", votes: 980, imageUrl: "https://via.placeholder.com/140/2196F3/FFFFFF?text=F2" },
        { id: 3, name: "محمد العبيدي", party: "تيار التغيير", votes: 750, imageUrl: "https://via.placeholder.com/140/7E57C2/FFFFFF?text=M3" }
    ];

    let votingEndTime = localStorage.getItem('votingEndTime') ? new Date(localStorage.getItem('votingEndTime')) : new Date(new Date().getTime() + (7 * 24 * 60 * 60 * 1000));
    let hasVoted = localStorage.getItem('userVoted') === 'true';
    let systemTitle = localStorage.getItem('systemTitle') || "النظام الانتخابي الذكي";
    let isVotingOpen = true;
    let lastUpdateTime = Date.now();
    let updateCount = 0;

    // --- نظام التزامن البسيط والفعال ---
    function saveAllData() {
        localStorage.setItem('electionCandidates', JSON.stringify(candidates));
        localStorage.setItem('votingEndTime', votingEndTime.toISOString());
        localStorage.setItem('systemTitle', systemTitle);
        localStorage.setItem('lastUpdate', Date.now().toString());
        
        updateSyncIndicator('تم الحفظ');
    }

    function loadAllData() {
        const savedCandidates = localStorage.getItem('electionCandidates');
        const savedTime = localStorage.getItem('votingEndTime');
        const savedTitle = localStorage.getItem('systemTitle');
        const savedLastUpdate = localStorage.getItem('lastUpdate');
        
        let dataChanged = false;

        if (savedCandidates) {
            const parsedCandidates = JSON.parse(savedCandidates);
            if (JSON.stringify(parsedCandidates) !== JSON.stringify(candidates)) {
                candidates = parsedCandidates;
                dataChanged = true;
            }
        }

        if (savedTime) {
            const newTime = new Date(savedTime);
            if (newTime.getTime() !== votingEndTime.getTime()) {
                votingEndTime = newTime;
                dataChanged = true;
            }
        }

        if (savedTitle && savedTitle !== systemTitle) {
            systemTitle = savedTitle;
            dataChanged = true;
        }

        if (dataChanged) {
            updateCount++;
            renderCandidates();
            updateMainStats();
            updateDashboardStats();
            updateVotingTimeDisplay();
            updateSyncIndicator('تم التحديث');
            
            document.getElementById('lastUpdateTime').textContent = new Date().toLocaleTimeString('ar-EG');
            document.getElementById('updateCount').textContent = updateCount;
            
            showNotification('تم تحديث البيانات تلقائياً');
        }
    }

    function updateSyncIndicator(status) {
        const indicator = document.getElementById('syncIndicator');
        indicator.innerHTML = `<i class="fas fa-sync-alt"></i> <span>${status}</span>`;
        
        if (status === 'تم التحديث') {
            indicator.style.background = 'rgba(0, 200, 83, 0.8)';
            setTimeout(() => {
                indicator.innerHTML = '<i class="fas fa-sync-alt"></i> <span>جاري المزامنة...</span>';
                indicator.style.background = 'rgba(33, 150, 243, 0.8)';
            }, 2000);
        } else if (status === 'تم الحفظ') {
            indicator.style.background = 'rgba(76, 175, 80, 0.8)';
        }
    }

    function forceSync() {
        loadAllData();
        showNotification('تم التحديث يدوياً');
    }

    // --- وظائف المساعدة العامة ---
    function showNotification(message) {
        const notification = document.createElement('div');
        notification.className = 'notification fade-in';
        notification.innerHTML = `<i class="fas fa-bell"></i> ${message}`;
        document.body.appendChild(notification);
        setTimeout(() => {
            notification.remove();
        }, 3000);
    }

    function shareOnSocial(platform) {
        const url = encodeURIComponent(window.location.href);
        const text = encodeURIComponent(document.title + " - شارك في الانتخابات الإلكترونية الآن!");
        let shareUrl = '';

        switch (platform) {
            case 'facebook':
                shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${url}`;
                break;
            case 'twitter':
                shareUrl = `https://twitter.com/intent/tweet?url=${url}&text=${text}`;
                break;
            case 'whatsapp':
                shareUrl = `whatsapp://send?text=${text}%20${url}`;
                break;
            case 'telegram':
                shareUrl = `https://t.me/share/url?url=${url}&text=${text}`;
                break;
            default:
                return;
        }

        window.open(shareUrl, 'ShareWindow', 'width=600,height=400');
    }

    // --- نظام الأمان وتسجيل الدخول ---
    document.getElementById('firstLoginForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const password = document.getElementById('firstPassword').value;
        const messageElement = document.getElementById('firstLoginMessage');
        messageElement.innerHTML = '';

        if (password === "admin123") {
            document.getElementById('firstLoginContainer').style.display = 'none';
            document.getElementById('secondLoginContainer').style.display = 'block';
            showNotification("تم التحقق من المرحلة الأولى بنجاح!");
        } else {
            messageElement.innerHTML = '<div class="alert alert-danger"><i class="fas fa-times-circle"></i> كلمة المرور الأولى غير صحيحة.</div>';
        }
    });

    document.getElementById('secondLoginForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const password = document.getElementById('secondPassword').value;
        const messageElement = document.getElementById('secondLoginMessage');
        messageElement.innerHTML = '';

        if (password === "secure456") {
            document.getElementById('secondLoginContainer').style.display = 'none';
            document.getElementById('dashboard').style.display = 'block';
            document.getElementById('adminAccessBtn').style.display = 'none';
            document.getElementById('mainContent').style.display = 'none';
            showNotification("تم تسجيل الدخول بنجاح! مرحباً بالمسؤول.");
            renderDashboardCandidates();
            updateDashboardStats();
            updateVotingTimeDisplay();
        } else {
            messageElement.innerHTML = '<div class="alert alert-danger"><i class="fas fa-times-circle"></i> كلمة المرور الثانية غير صحيحة.</div>';
        }
    });

    document.getElementById('adminAccessBtn').addEventListener('click', function() {
        document.getElementById('mainContent').style.display = 'none';
        document.getElementById('firstLoginContainer').style.display = 'block';
        document.getElementById('firstPassword').value = '';
        document.getElementById('firstLoginMessage').innerHTML = '';
        document.getElementById('secondLoginContainer').style.display = 'none';
    });

    function logout() {
        document.getElementById('dashboard').style.display = 'none';
        document.getElementById('firstLoginContainer').style.display = 'none';
        document.getElementById('secondLoginContainer').style.display = 'none';
        document.getElementById('adminAccessBtn').style.display = 'block';
        document.getElementById('mainContent').style.display = 'block';
        showNotification("تم تسجيل الخروج بنجاح.");
        renderCandidates();
        updateMainStats();
    }

    // --- إدارة المرشحين ---
    function addCandidate() {
        const name = document.getElementById('newCandidateName').value.trim();
        const party = document.getElementById('newCandidateParty').value.trim();
        const imageUrl = document.getElementById('newCandidateImage').value.trim() || "https://via.placeholder.com/140/CCCCCC/000000?text=NEW";

        if (!name || !party) {
            showNotification("يرجى إدخال اسم وحزب المرشح.");
            return;
        }

        const newCandidate = {
            id: candidates.length > 0 ? Math.max(...candidates.map(c => c.id)) + 1 : 1,
            name: name,
            party: party,
            votes: 0,
            imageUrl: imageUrl
        };

        candidates.push(newCandidate);
        saveAllData();
        renderCandidates();
        renderDashboardCandidates();
        updateMainStats();
        updateDashboardStats();
        showNotification(`تمت إضافة المرشح: ${name}`);

        // مسح الحقول
        document.getElementById('newCandidateName').value = '';
        document.getElementById('newCandidateParty').value = '';
    }

    function renderDashboardCandidates() {
        const list = document.getElementById('dashboardCandidatesList');
        list.innerHTML = '';

        candidates.sort((a, b) => b.votes - a.votes);
        
        if (candidates.length === 0) {
            list.innerHTML = '<div class="alert alert-warning"><i class="fas fa-info-circle"></i> لا يوجد مرشحون حالياً.</div>';
            return;
        }

        candidates.forEach(candidate => {
            const item = document.createElement('div');
            item.className = 'candidate-item fade-in';
            item.innerHTML = `
                <div class="candidate-item-content">
                    <img src="${candidate.imageUrl}" onerror="this.src='https://via.placeholder.com/80/CCCCCC/000000?text=No+Image'" alt="${candidate.name}" class="candidate-preview">
                    <div class="candidate-details">
                        <h4 style="color: var(--primary);">${candidate.name} (${candidate.party})</h4>
                        <p style="color: var(--light);">الأصوات: <strong>${candidate.votes}</strong> | ID: ${candidate.id}</p>
                    </div>
                </div>
                <div class="votes-control">
                    <input type="number" id="dashboardVotesInput-${candidate.id}" class="form-control vote-input" value="${candidate.votes}" min="0" style="color: var(--dark);">
                    <button class="update-votes-btn" onclick="updateCandidateVotes(${candidate.id})">
                        <i class="fas fa-sync-alt"></i> تحديث الأصوات
                    </button>
                </div>
                <div class="candidate-actions">
                    <button class="btn btn-warning btn-sm" onclick="editCandidate(${candidate.id})"><i class="fas fa-edit"></i> تعديل</button>
                    <button class="btn btn-danger btn-sm" onclick="deleteCandidate(${candidate.id})"><i class="fas fa-trash"></i> حذف</button>
                </div>
            `;
            list.appendChild(item);
        });
    }
    
    function deleteCandidate(id) {
        if (confirm("هل أنت متأكد من حذف هذا المرشح؟ لا يمكن التراجع عن هذا الإجراء.")) {
            candidates = candidates.filter(c => c.id !== id);
            saveAllData();
            renderCandidates();
            renderDashboardCandidates();
            updateMainStats();
            updateDashboardStats();
            showNotification("تم حذف المرشح بنجاح.");
        }
    }

    function editCandidate(id) {
        const candidate = candidates.find(c => c.id === id);
        if (!candidate) return;

        const newName = prompt(`تعديل اسم المرشح الحالي (${candidate.name}):`, candidate.name);
        if (newName && newName.trim() !== "") {
            candidate.name = newName.trim();
        }

        const newParty = prompt(`تعديل حزب المرشح الحالي (${candidate.party}):`, candidate.party);
        if (newParty && newParty.trim() !== "") {
            candidate.party = newParty.trim();
        }

        const newImage = prompt(`تعديل رابط الصورة الحالي (${candidate.imageUrl}):`, candidate.imageUrl);
        if (newImage && newImage.trim() !== "") {
            candidate.imageUrl = newImage.trim();
        }
        
        saveAllData();
        renderCandidates();
        renderDashboardCandidates();
        updateMainStats();
        updateDashboardStats();
        showNotification("تم تحديث بيانات المرشح بنجاح.");
    }

    function updateCandidateVotes(id) {
        const inputElement = document.getElementById(`dashboardVotesInput-${id}`);
        const newVotes = parseInt(inputElement.value);

        if (isNaN(newVotes) || newVotes < 0) {
            showNotification("القيمة غير صحيحة.");
            inputElement.value = candidates.find(c => c.id === id).votes;
            return;
        }

        const candidate = candidates.find(c => c.id === id);
        if (candidate) {
            candidate.votes = newVotes;
            saveAllData();
            renderCandidates();
            renderDashboardCandidates();
            updateMainStats();
            updateDashboardStats();
            showNotification(`تم تحديث أصوات ${candidate.name} إلى ${newVotes}`);
        }
    }

    // --- وظائف التصويت والواجهة الرئيسية ---
    function renderCandidates() {
        const grid = document.getElementById('candidatesGrid');
        grid.innerHTML = '';
        
        candidates.sort((a, b) => b.votes - a.votes);
        
        if (candidates.length === 0) {
            grid.innerHTML = '<div class="alert alert-warning"><i class="fas fa-info-circle"></i> لا يوجد مرشحون حالياً. يرجى مراجعة المسؤول.</div>';
            return;
        }

        candidates.forEach(candidate => {
            const card = document.createElement('div');
            card.className = 'candidate-card fade-in';
            card.innerHTML = `
                <img src="${candidate.imageUrl}" onerror="this.src='https://via.placeholder.com/140/CCCCCC/000000?text=No+Image'" alt="${candidate.name}" class="candidate-image">
                <h3>${candidate.name}</h3>
                <p>الحزب: <strong>${candidate.party}</strong></p>
                <p>الأصوات الحالية: <strong class="vote-count">${candidate.votes}</strong></p>
                <button class="vote-btn" id="voteBtn-${candidate.id}" onclick="voteForCandidate(${candidate.id})">
                    <i class="fas fa-vote-yea"></i> صوت الآن
                </button>
            `;
            grid.appendChild(card);
        });
        checkVotingStatus();
    }
    
    function checkVotingStatus() {
        const now = new Date();
        isVotingOpen = now < votingEndTime;

        const timerDisplay = document.getElementById('mainTimerDisplay');
        const votingMessage = document.getElementById('votingMessage');
        const voteButtons = document.querySelectorAll('.vote-btn');

        if (isVotingOpen) {
            timerDisplay.style.color = 'var(--secondary)';
            votingMessage.innerHTML = '';
            voteButtons.forEach(btn => {
                btn.disabled = hasVoted;
                if (hasVoted) {
                    btn.textContent = 'تم التصويت بالفعل';
                } else {
                    btn.innerHTML = '<i class="fas fa-vote-yea"></i> صوت الآن';
                }
            });
        } else {
            timerDisplay.textContent = "انتهت فترة التصويت";
            timerDisplay.style.color = 'var(--danger)';
            votingMessage.innerHTML = '<div class="alert alert-danger" style="color: #ffcdd2;">انتهت فترة التصويت ولا يمكن الإدلاء بأصوات جديدة.</div>';
            voteButtons.forEach(btn => {
                btn.disabled = true;
                btn.textContent = 'التصويت مغلق';
            });
        }
    }

    function voteForCandidate(id) {
        if (!isVotingOpen) {
            showNotification("التصويت مغلق حالياً.");
            return;
        }
        
        if (hasVoted) {
            showNotification("لقد قمت بالتصويت بالفعل. لا يمكن التصويت مرتين.");
            return;
        }

        const candidate = candidates.find(c => c.id === id);
        if (candidate) {
            candidate.votes++;
            hasVoted = true;
            localStorage.setItem('userVoted', 'true');
            saveAllData();
            renderCandidates();
            updateMainStats();
            updateDashboardStats();
            showNotification(`شكراً لك! تم التصويت لـ ${candidate.name} بنجاح.`);
        }
    }

    function updateMainStats() {
        const totalVotes = candidates.reduce((sum, c) => sum + c.votes, 0);
        const leader = candidates.reduce((max, c) => (c.votes > max.votes ? c : max), { votes: -1, name: '--' });
        const participation = candidates.length > 0 ? (totalVotes * 100 / (candidates.length * 1000)).toFixed(2) : 0;

        document.getElementById('mainTitle').innerHTML = `<i class="fas fa-shield-alt"></i> ${systemTitle} <i class="fas fa-poll"></i>`;
        document.title = systemTitle;
        document.getElementById('systemTitle').value = systemTitle;
        
        document.getElementById('mainStatCandidates').textContent = candidates.length;
        document.getElementById('mainStatTotalVotes').textContent = totalVotes;
        document.getElementById('mainStatLeader').textContent = leader.name;
        document.getElementById('mainStatParticipation').textContent = `${participation}%`;

        // تحديث العداد التنازلي
        const now = new Date();
        const diff = votingEndTime.getTime() - now.getTime();
        const timerDisplay = document.getElementById('mainTimerDisplay');

        if (diff > 0) {
            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);

            timerDisplay.textContent = `${days}ي ${hours}س ${minutes}د ${seconds}ث متبقية`;
            isVotingOpen = true;
        } else {
            isVotingOpen = false;
        }
        checkVotingStatus();
    }
    
    function updateDashboardStats() {
        const totalVotes = candidates.reduce((sum, c) => sum + c.votes, 0);
        let leaderName = '--';
        if (candidates.length > 0) {
            const leader = candidates.reduce((max, c) => (c.votes > max.votes ? c : max), { votes: -1, name: '--' });
            leaderName = leader.name;
        }

        document.getElementById('dashboardStatCandidates').textContent = candidates.length;
        document.getElementById('dashboardStatTotalVotes').textContent = totalVotes;
        document.getElementById('dashboardStatLeader').textContent = leaderName;
        document.getElementById('dashboardStatStatus').textContent = isVotingOpen ? 'مفتوح' : 'مغلق';
        document.getElementById('dashboardStatStatus').style.color = isVotingOpen ? 'var(--secondary)' : 'var(--danger)';
    }

    // --- وظائف لوحة التحكم ---
    function switchTab(tabName) {
        document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
        document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));

        document.getElementById(`${tabName}-tab`).classList.add('active');
        document.querySelector(`.tab[onclick="switchTab('${tabName}')"]`).classList.add('active');
        
        if (tabName === 'candidates') {
            renderDashboardCandidates();
        }
        if (tabName === 'time') {
            updateVotingTimeDisplay();
        }
    }

    function updateSystemTitle() {
        const newTitle = document.getElementById('systemTitle').value;
        if (newTitle.trim() === "") {
            showNotification("لا يمكن أن يكون العنوان فارغاً.");
            return;
        }
        
        systemTitle = newTitle.trim();
        saveAllData();
        updateMainStats();
        
        showNotification("تم تحديث شريط العنوان بنجاح!");
    }

    // --- وظائف إدارة الوقت ---
    function updateVotingTimeDisplay() {
        const options = { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit' };
        document.getElementById('currentEndTime').textContent = votingEndTime.toLocaleString('ar-EG', options);
    }

    function extendVotingTime(hours) {
        if (!isVotingOpen) {
            votingEndTime = new Date(); // ابدأ من الآن إذا كان مغلقاً
        }
        votingEndTime.setTime(votingEndTime.getTime() + (hours * 60 * 60 * 1000));
        saveAllData();
        isVotingOpen = true;
        updateVotingTimeDisplay();
        updateMainStats();
        updateDashboardStats();
        showNotification(`تم تمديد فترة التصويت بـ ${hours} ساعة.`);
    }
    
    function resetVotingTime() {
        if (confirm("هل أنت متأكد من إعادة تعيين وقت الانتهاء؟ سيتم تعيينه إلى 7 أيام من الآن.")) {
            votingEndTime = new Date(new Date().getTime() + (7 * 24 * 60 * 60 * 1000));
            saveAllData();
            isVotingOpen = true;
            updateVotingTimeDisplay();
            updateMainStats();
            updateDashboardStats();
            showNotification("تمت إعادة تعيين وقت التصويت إلى 7 أيام.");
        }
    }

    function setSpecificEndTime() {
        const input = document.getElementById('newEndTimeInput').value;
        const newTime = new Date(input);

        if (isNaN(newTime) || newTime.getTime() < new Date().getTime()) {
            showNotification("التاريخ والوقت المدخل غير صالح أو في الماضي.");
            return;
        }

        votingEndTime = newTime;
        saveAllData();
        isVotingOpen = true;
        updateVotingTimeDisplay();
        updateMainStats();
        updateDashboardStats();
        showNotification("تم تعيين وقت انتهاء التصويت الجديد.");
    }
    
    function lockVoting() {
        votingEndTime = new Date(new Date().getTime() - 1000); // تعيين الوقت إلى الماضي
        saveAllData();
        isVotingOpen = false;
        updateVotingTimeDisplay();
        updateMainStats();
        updateDashboardStats();
        showNotification("تم إغلاق التصويت يدوياً.");
    }

    function unlockVoting() {
        votingEndTime = new Date(new Date().getTime() + (1 * 60 * 60 * 1000)); // ساعة من الآن
        saveAllData();
        isVotingOpen = true;
        updateVotingTimeDisplay();
        updateMainStats();
        updateDashboardStats();
        showNotification("تم تفعيل التصويت يدوياً لساعة واحدة.");
    }

    function resetAllVotes() {
        if (confirm("تحذير: هل أنت متأكد من تصفير جميع الأصوات لجميع المرشحين؟ لا يمكن التراجع عن هذا الإجراء.")) {
            candidates.forEach(c => c.votes = 0);
            hasVoted = false;
            localStorage.removeItem('userVoted');
            saveAllData();
            renderCandidates();
            renderDashboardCandidates();
            updateMainStats();
            updateDashboardStats();
            showNotification("تم تصفير جميع الأصوات بنجاح. العملية بدأت من جديد.");
        }
    }

    function exportData() {
        const data = {
            SystemTitle: systemTitle,
            VotingEndTime: votingEndTime.toISOString(),
            Candidates: candidates
        };
        
        const dataStr = "data:text/json;charset=utf-8," + encodeURIComponent(JSON.stringify(data, null, 2));
        const downloadAnchorNode = document.createElement('a');
        downloadAnchorNode.setAttribute("href", dataStr);
        downloadAnchorNode.setAttribute("download", "election_data.json");
        document.body.appendChild(downloadAnchorNode);
        downloadAnchorNode.click();
        downloadAnchorNode.remove();
        showNotification("تم تصدير البيانات بنجاح كملف JSON.");
    }

    // --- نظام الجسيمات العائمة ---
    function createParticle() {
        const particle = document.createElement('div');
        particle.className = 'particle';
        particle.style.left = `${Math.random() * 100}vw`;
        particle.style.animationDelay = `-${Math.random() * 10}s`;
        particle.style.animationDuration = `${10 + Math.random() * 10}s`;
        document.getElementById('particlesContainer').appendChild(particle);
    }
    
    // --- وظيفة التهيئة الرئيسية ---
    function initApp() {
        document.getElementById('mainContent').style.display = 'block'; 
        renderCandidates();
        updateMainStats();
        
        // تحديث كل 1 ثانية للعد التنازلي
        setInterval(() => {
            updateMainStats();
        }, 1000); 

        // التزامن التلقائي كل 3 ثواني
        setInterval(loadAllData, 3000);

        // إنشاء الجسيمات
        for (let i = 0; i < 20; i++) {
            createParticle();
        }
        
        // تحديث إحصائيات لوحة التحكم كل 5 ثوانٍ إذا كانت مفتوحة
        setInterval(() => {
            if (document.getElementById('dashboard').style.display === 'block') {
                updateDashboardStats();
            }
        }, 5000); 
    }

    document.addEventListener('DOMContentLoaded', initApp);
</script>
</body>
</html>
