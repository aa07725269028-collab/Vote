                            <p>إجمالي الأصوات</p>
                            <h2 id="dashboardStatTotalVotes">0</h2>
                        </div>
                    </div>
                </div>

                <div id="candidates-tab" class="tab-content">
                    <h3>إضافة مرشح جديد</h3>
                    <div style="background: rgba(255, 255, 255, 0.1); border-radius: 10px; padding: 20px; margin-bottom: 20px;">
                        <div class="form-group">
                            <label for="newCandidateName">الاسم الكامل</label>
                            <input type="text" id="newCandidateName" class="form-control" placeholder="اسم المرشح">
                        </div>
                        <div class="form-group">
                            <label for="newCandidateParty">الحزب/الكتلة</label>
                            <input type="text" id="newCandidateParty" class="form-control" placeholder="اسم الحزب">
                        </div>
                        <div class="form-group">
                            <label for="newCandidateImage">رابط الصورة</label>
                            <input type="text" id="newCandidateImage" class="form-control" placeholder="رابط الصورة" value="https://via.placeholder.com/140/CCCCCC/000000?text=NEW">
