    function checkVotingStatus() {
        const now = new Date();
        isVotingOpen = now < votingEndTime;

        const timerDisplay = document.getElementById('mainTimerDisplay');
        const votingMessage = document.getElementById('votingMessage');
        const voteButtons = document.querySelectorAll('.vote-btn');

        if (isVotingOpen) {
            timerDisplay.style.color = 'var(--secondary)';
            votingMessage.innerHTML = '';
            voteButtons.forEach(btn => {
                btn.disabled = hasVoted;
                if (hasVoted) {
                    btn.textContent = 'ØªÙ… Ø§Ù„ØªØµÙˆÙŠØª Ø¨Ø§Ù„ÙØ¹Ù„';
                } else {
                    btn.innerHTML = '<i class="fas fa-vote-yea"></i> ØµÙˆØª Ø§Ù„Ø¢Ù†';
                }
            });
        } else {
            timerDisplay.textContent = "Ø§Ù†ØªÙ‡Øª ÙØªØ±Ø© Ø§Ù„ØªØµÙˆÙŠØª";
            timerDisplay.style.color = 'var(--danger)';
            votingMessage.innerHTML = '<div class="alert alert-danger" style="color: #ffcdd2;">Ø§Ù†ØªÙ‡Øª ÙØªØ±Ø© Ø§Ù„ØªØµÙˆÙŠØª ÙˆÙ„Ø§ ÙŠÙ…ÙƒÙ† Ø§Ù„Ø¥Ø¯Ù„Ø§Ø¡ Ø¨Ø£ØµÙˆØ§Øª Ø¬Ø¯ÙŠØ¯Ø©.</div>';
            voteButtons.forEach(btn => {
                btn.disabled = true;
                btn.textContent = 'Ø§Ù„ØªØµÙˆÙŠØª Ù…ØºÙ„Ù‚';
            });
        }
    }

    function voteForCandidate(id) {
        if (!isVotingOpen) {
            showNotification("Ø§Ù„ØªØµÙˆÙŠØª Ù…ØºÙ„Ù‚ Ø­Ø§Ù„ÙŠØ§Ù‹.", 'danger');
            return;
        }
        
        if (hasVoted) {
            showNotification("Ù„Ù‚Ø¯ Ù‚Ù…Øª Ø¨Ø§Ù„ØªØµÙˆÙŠØª Ø¨Ø§Ù„ÙØ¹Ù„. Ù„Ø§ ÙŠÙ…ÙƒÙ† Ø§Ù„ØªØµÙˆÙŠØª Ù…Ø±ØªÙŠÙ†.", 'danger');
            return;
        }

        const candidate = candidates.find(c => c.id === id);
        if (candidate) {
            candidate.votes++;
            hasVoted = true;
            localStorage.setItem(VOTED_KEY, 'true');
            saveCandidates();
            renderCandidates();
            updateMainStats();
            showNotification(`Ø´ÙƒØ±Ø§Ù‹ Ù„Ùƒ! ØªÙ… Ø§Ù„ØªØµÙˆÙŠØª Ù„Ù€ ${candidate.name} Ø¨Ù†Ø¬Ø§Ø­.`, 'success');
        }
    }

    function updateMainStats() {
        const totalVotes = candidates.reduce((sum, c) => sum + c.votes, 0);
        const leader = candidates.reduce((max, c) => (c.votes > max.votes ? c : max), { votes: -1, name: '--' });
        const participation = candidates.length > 0 ? (totalVotes * 100 / (candidates.length * 1000)).toFixed(2) : 0;

        document.getElementById('mainTitle').innerHTML = `<i class="fas fa-shield-alt"></i> ${systemTitle} <i class="fas fa-poll"></i>`;
        
        document.getElementById('mainStatCandidates').textContent = candidates.length;
        document.getElementById('mainStatTotalVotes').textContent = totalVotes;
        document.getElementById('mainStatLeader').textContent = leader.name;
        document.getElementById('mainStatParticipation').textContent = `${participation}%`;

        const now = new Date();
        const diff = votingEndTime.getTime() - now.getTime();
        const timerDisplay = document.getElementById('mainTimerDisplay');

        if (diff > 0) {
            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);

            timerDisplay.textContent = `${days}ÙŠ ${hours}Ø³ ${minutes}Ø¯ ${seconds}Ø« Ù…ØªØ¨Ù‚ÙŠØ©`;
            isVotingOpen = true;
        } else {
            isVotingOpen = false;
        }
        checkVotingStatus();
    }
    
