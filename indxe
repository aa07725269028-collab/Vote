        grid.innerHTML = '';
        
        candidates.sort((a, b) => b.votes - a.votes);
        
        if (candidates.length === 0) {
            grid.innerHTML = '<div class="alert alert-warning"><i class="fas fa-info-circle"></i> Ù„Ø§ ÙŠÙˆØ¬Ø¯ Ù…Ø±Ø´Ø­ÙˆÙ† Ø­Ø§Ù„ÙŠØ§Ù‹. ÙŠØ±Ø¬Ù‰ Ù…Ø±Ø§Ø¬Ø¹Ø© Ø§Ù„Ù…Ø³Ø¤ÙˆÙ„.</div>';
