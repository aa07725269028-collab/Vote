    function renderDashboardStats() {
        const totalVotes = candidates.reduce((sum, c) => sum + c.votes, 0);
        let leaderName = '--';
        if (candidates.length > 0) {
            const leader = candidates.reduce((max, c) => (c.votes > max.votes ? c : max), { votes: -1, name: '--' });
            leaderName = leader.name;
        }

        document.getElementById('dashboardStatCandidates').textContent = candidates.length;
        document.getElementById('dashboardStatTotalVotes').textContent = totalVotes;
        document.getElementById('dashboardStatWinner').textContent = leaderName;
        document.getElementById('dashboardStatStatus').textContent = isVotingOpen ? 'Ù…ÙØªÙˆØ­' : 'Ù…ØºÙ„Ù‚';
        document.getElementById('dashboardStatStatus').style.color = isVotingOpen ? 'var(--secondary)' : 'var(--danger)';
    }

    // --- ÙˆØ¸Ø§Ø¦Ù Ø¥Ø¯Ø§Ø±Ø© Ø§Ù„ÙˆÙ‚Øª ---

    function updateVotingTimeDisplay() {
        const options = { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit' };
        document.getElementById('currentEndTime').textContent = votingEndTime.toLocaleString('ar-EG', options);

        const now = new Date();
        const diff = votingEndTime.getTime() - now.getTime();
        const timeRemainingElement = document.getElementById('timeRemaining');

        if (diff > 0) {
            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);

            timeRemainingElement.textContent = `Ù…ØªØ¨Ù‚ÙŠ: ${days} ÙŠÙˆÙ…, ${hours} Ø³Ø§Ø¹Ø©, ${minutes} Ø¯Ù‚ÙŠÙ‚Ø©, ${seconds} Ø«Ø§Ù†ÙŠØ©`;
        } else {
            timeRemainingElement.textContent = "Ø§Ù†ØªÙ‡Ù‰ Ø§Ù„ÙˆÙ‚Øª.";
            isVotingOpen = false;
        }
    }

    function extendVotingTime(hours) {
        if (!isVotingOpen) {
            votingEndTime = new Date();
        }
        votingEndTime.setTime(votingEndTime.getTime() + (hours * 60 * 60 * 1000));
        localStorage.setItem(END_TIME_KEY, votingEndTime.toISOString());
        isVotingOpen = true;
        updateVotingTimeDisplay();
        updateMainStats();
        showNotification(`ØªÙ… ØªÙ…Ø¯ÙŠØ¯ ÙØªØ±Ø© Ø§Ù„ØªØµÙˆÙŠØª Ø¨Ù€ ${hours} Ø³Ø§Ø¹Ø©.`, 'info');
    }
    
    function resetVotingTime() {
        if (confirm("Ù‡Ù„ Ø£Ù†Øª Ù…ØªØ£ÙƒØ¯ Ù…Ù† Ø¥Ø¹Ø§Ø¯Ø© ØªØ¹ÙŠÙŠÙ† ÙˆÙ‚Øª Ø§Ù„Ø§Ù†ØªÙ‡Ø§Ø¡ØŸ Ø³ÙŠØªÙ… ØªØ¹ÙŠÙŠÙ†Ù‡ Ø¥Ù„Ù‰ 7 Ø£ÙŠØ§Ù… Ù…Ù† Ø§Ù„Ø¢Ù†.")) {
            votingEndTime = new Date(new Date().getTime() + (7 * 24 * 60 * 60 * 1000));
            localStorage.setItem(END_TIME_KEY, votingEndTime.toISOString());
            isVotingOpen = true;
            updateVotingTimeDisplay();
            updateMainStats();
            showNotification("ØªÙ…Øª Ø¥Ø¹Ø§Ø¯Ø© ØªØ¹ÙŠÙŠÙ† ÙˆÙ‚Øª Ø§Ù„ØªØµÙˆÙŠØª Ø¥Ù„Ù‰ 7 Ø£ÙŠØ§Ù….", 'warning');
        }
    }

    function setSpecificEndTime() {
        const input = document.getElementById('newEndTimeInput').value;
        const newTime = new Date(input);

        if (isNaN(newTime) || newTime.getTime() < new Date().getTime()) {
            showNotification("Ø§Ù„ØªØ§Ø±ÙŠØ® ÙˆØ§Ù„ÙˆÙ‚Øª Ø§Ù„Ù…Ø¯Ø®Ù„ ØºÙŠØ± ØµØ§Ù„Ø­ Ø£Ùˆ ÙÙŠ Ø§Ù„Ù…Ø§Ø¶ÙŠ.", 'danger');
            return;
        }

        votingEndTime = newTime;
        localStorage.setItem(END_TIME_KEY, votingEndTime.toISOString());
        isVotingOpen = true;
        updateVotingTimeDisplay();
        updateMainStats();
        showNotification("ØªÙ… ØªØ¹ÙŠÙŠÙ† ÙˆÙ‚Øª Ø§Ù†ØªÙ‡Ø§Ø¡ Ø§Ù„ØªØµÙˆÙŠØª Ø§Ù„Ø¬Ø¯ÙŠØ¯.", 'success');
    }
    
    function lockVoting() {
        votingEndTime = new Date(new Date().getTime() - 1000);
        localStorage.setItem(END_TIME_KEY, votingEndTime.toISOString());
        isVotingOpen = false;
        updateVotingTimeDisplay();
        updateMainStats();
        renderDashboardStats();
        showNotification("ØªÙ… Ø¥ØºÙ„Ø§Ù‚ Ø§Ù„ØªØµÙˆÙŠØª ÙŠØ¯ÙˆÙŠØ§Ù‹.", 'danger');
    }

    function unlockVoting() {
        votingEndTime = new Date(new Date().getTime() + (1 * 60 * 60 * 1000));
        localStorage.setItem(END_TIME_KEY, votingEndTime.toISOString());
        isVotingOpen = true;
        updateVotingTimeDisplay();
        updateMainStats();
        renderDashboardStats();
        showNotification("ØªÙ… ØªÙØ¹ÙŠÙ„ Ø§Ù„ØªØµÙˆÙŠØª ÙŠØ¯ÙˆÙŠØ§Ù‹ Ù„Ø³Ø§Ø¹Ø© ÙˆØ§Ø­Ø¯Ø©.", 'success');
    }

    function resetAllVotes() {
        if (confirm("ØªØ­Ø°ÙŠØ±: Ù‡Ù„ Ø£Ù†Øª Ù…ØªØ£ÙƒØ¯ Ù…Ù† ØªØµÙÙŠØ± Ø¬Ù…ÙŠØ¹ Ø§Ù„Ø£ØµÙˆØ§Øª Ù„Ø¬Ù…ÙŠØ¹ Ø§Ù„Ù…Ø±Ø´Ø­ÙŠÙ†ØŸ Ù„Ø§ ÙŠÙ…ÙƒÙ† Ø§Ù„ØªØ±Ø§Ø¬Ø¹ Ø¹Ù† Ù‡Ø°Ø§ Ø§Ù„Ø¥Ø¬Ø±Ø§Ø¡.")) {
            candidates.forEach(c => c.votes = 0);
            hasVoted = false;
            localStorage.removeItem(VOTED_KEY);
            saveCandidates();
            renderCandidates();
            renderDashboardCandidates();
            renderDashboardStats();
            updateMainStats();
            showNotification("ØªÙ… ØªØµÙÙŠØ± Ø¬Ù…ÙŠØ¹ Ø§Ù„Ø£ØµÙˆØ§Øª Ø¨Ù†Ø¬Ø§Ø­. Ø§Ù„Ø¹Ù…Ù„ÙŠØ© Ø¨Ø¯Ø£Øª Ù…Ù† Ø¬Ø¯ÙŠØ¯.", 'danger');
        }
    }

    function exportData() {
        const data = {
            SystemTitle: systemTitle,
            VotingEndTime: votingEndTime.toISOString(),
            Candidates: candidates
        };
        
        const dataStr = "data:text/json;charset=utf-8," + encodeURIComponent(JSON.stringify(data, null, 2));
        const downloadAnchorNode = document.createElement('a');
        downloadAnchorNode.setAttribute("href", dataStr);
        downloadAnchorNode.setAttribute("download", "election_data.json");
        document.body.appendChild(downloadAnchorNode);
        downloadAnchorNode.click();
        downloadAnchorNode.remove();
        showNotification("ØªÙ… ØªØµØ¯ÙŠØ± Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø¨Ù†Ø¬Ø§Ø­ ÙƒÙ…Ù„Ù JSON.", 'info');
    }

    // --- Ù†Ø¸Ø§Ù… Ø§Ù„Ø¬Ø³ÙŠÙ…Ø§Øª Ø§Ù„Ø¹Ø§Ø¦Ù…Ø© ---

    function createParticle() {
        const particle = document.createElement('div');
        particle.className = 'particle';
        particle.style.left = `${Math.random() * 100}vw`;
        particle.style.animationDelay = `-${Math.random() * 10}s`;
        particle.style.animationDuration = `${10 + Math.random() * 10}s`;
        document.getElementById('particlesContainer').appendChild(particle);
    }
    
    // --- ÙˆØ¸ÙŠÙØ© Ø§Ù„ØªÙ‡ÙŠØ¦Ø© Ø§Ù„Ø±Ø¦ÙŠØ³ÙŠØ© ---
    function initApp() {
        document.title = pageTitle;
        
        document.getElementById('systemTitle').value = systemTitle;
        document.getElementById('pageTitleInput').value = pageTitle;
        
        document.getElementById('mainContent').style.display = 'block'; 
        renderCandidates();
        updateMainStats();
        
        setInterval(() => {
            updateMainStats();
            updateVotingTimeDisplay();
        }, 1000);

        for (let i = 0; i < 20; i++) {
            createParticle();
        }
        
        setInterval(() => {
            if (document.getElementById('dashboard').style.display === 'block') {
                renderDashboardStats();
            }
        }, 5000);
    }

    document.addEventListener('DOMContentLoaded', initApp);
</script>
