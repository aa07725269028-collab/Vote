        if (candidate) {
            candidate.votes = newVotes;
            saveCandidates();
            renderCandidates();
            renderDashboardCandidates();
            renderDashboardStats();
            showNotification(`ØªÙ… ØªØ­Ø¯ÙŠØ« Ø£ØµÙˆØ§Øª ${candidate.name} Ø¥Ù„Ù‰ ${newVotes}`, 'info');
